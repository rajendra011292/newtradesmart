{
  "name": "rajendra/tradesmart",
  "description": "TradeSmart MVC web application using PHP, MySQL, TailwindCSS",
  "type": "project",
  "require": {
    "bramus/router": "^1.6",
    "phpmailer/phpmailer": "^7.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/helpers/functions.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-update-cmd": [
      "@composer dump-autoload -o"
    ],
    "post-install-cmd": [
      "@composer dump-autoload -o"
    ]
  }
}
